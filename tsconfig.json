{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "server.ts", "app.ts"],
  "exclude": ["node_modules"]
}
